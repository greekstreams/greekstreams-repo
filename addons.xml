<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
    <addon id="plugin.video.greekstreams"
           name="GreekStreams"
           version="1.0.0" <!-- Must match video addon's version -->
           provider-name="GreekStreams Team">
        <requires>
            <import addon="xbmc.python" version="3.0.0"/>
            <import addon="script.module.requests"/>
            <import addon="script.module.beautifulsoup4"/>
        </requires>
        <extension point="xbmc.python.pluginsource" library="addon.py">
            <provides>video</provides>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary lang="en_GB">Watch Greek live streams.</summary>
            <description lang="en_GB">Access Greek live video streams.</description>
            <disclaimer lang="en_GB">Content is sourced from freely available internet sites.</disclaimer>
            <platform>all</platform>
            <license>GPL-3.0-or-later</license>
            <assets>
                <icon>icon.png</icon>
                <fanart>fanart.jpg</fanart>
            </assets>
        </extension>
    </addon>
</addons>